{namespace Theme}

/**
 * This renders the component's whole content.
 */
{template .render}
	{@param? industries: ?}
	{@param? testimonials: ?}
	{@param? statsList: ?}
	{@param? languages:?}
	{@param? offices:?}
	<div>
	{call MenuBar.render}
		{param languages: $languages /} 
		{param offices: $offices /}
	{/call}
	<div class="container-fluid">
	// Industries Component
	{call Industries.render}
		{param industries: $industries /}
	{/call}

	// Testimonials Component
	{call Testimonials.render}
		{param testimonials: $testimonials /}
	{/call}

	// Stats Component
	{call Stats.render}
		{param statsList: $statsList /}
	{/call}

	</div>
	</div>
{/template}
